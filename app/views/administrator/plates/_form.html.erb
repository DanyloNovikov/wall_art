<%= form_with model: [:administrator, @plate], local: true, html: { multipart: true }, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Название", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :order, "Порядок", class: "form-label" %>
    <%= f.number_field :order, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :collection_id, "Коллекция", class: "form-label" %>
    <%= f.collection_select :collection_id, Collection.all, :id, :title, { prompt: "Выберите коллекцию" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Изображение", class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit "Сохранить", class: "btn btn-success" %>
<% end %>

<%= form_with model: [:administrator, @collection], local: true, class: "needs-validation" do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Название", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Описание", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :publish, class: "form-check-input" %>
    <%= f.label :publish, "Опубликовать?", class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.label :images, "Изображения", class: "form-label" %>
    <%= f.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <%= f.submit "Сохранить", class: "btn btn-success" %>
<% end %>
